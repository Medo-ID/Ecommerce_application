{
  "version": 2,
  "rewrites": [
    {
      "builds": [
        {
          "src": "index.js",
          "use": "@vercel/node",
          "config": { "includeFiles": ["dist/**"] }
        }
      ],
      "routes": [
        {
          "src": "/(.*)",
          "dest": "index.js"
        }
      ],
      "headers": [
        {
          "source": "/(.*)",
          "headers": [
            {
              "key": "Access-Control-Allow-Origin",
              "value": "https://ecommerce-application-client-flame.vercel.app"
            },
            { "key": "Access-Control-Allow-Credentials", "value": "true" }
          ]
        }
      ]
    }
  ]
}
